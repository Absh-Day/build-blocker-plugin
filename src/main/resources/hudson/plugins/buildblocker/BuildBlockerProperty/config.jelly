<j:jelly xmlns:j="jelly:core" xmlns:f="/lib/form">
    <f:optionalBlock name="useBuildBlocker" title="${%Description}"
                     checked="${instance.useBuildBlocker}" inline="true"
                     help="/plugin/build-blocker-plugin/help-usageBuildBlocker.html">
        <f:entry title="${%Blocking_Jobs}" field="blockingJobs">
            <f:textarea/>
        </f:entry>
        <f:section title="${%configure_block_level}">
            <f:entry description="${%description_global}">
                <f:radio title="${%title_global}" name="blockLevel" value="global"
                         checked="${empty instance.blockLevel or instance.blockLevel.global}"/>
            </f:entry>
            <f:entry
                    description="${%description_node}">
                <f:radio title="${%title_node}" name="blockLevel" value="node"
                         checked="${instance.blockLevel.node}"/>
            </f:entry>
        </f:section>
        <f:section title="${%title_configure_scanning}">
            <f:entry description="${%description_buildable}">
                <f:radio title="${%title_buildable}" name="scanQueueFor" value="buildable"
                         checked="${instance.scanQueueFor.buildable}"/>
            </f:entry>
            <f:entry
                    description="${%description_all}">
                <f:radio title="${%title_all}" name="scanQueueFor" value="all"
                         checked="${instance.scanQueueFor.all}"/>
            </f:entry>
            <f:entry>
                <f:radio title="${%title_disabled}" name="scanQueueFor" value="disabled"
                         checked="${empty instance.scanQueueFor or instance.scanQueueFor.disabled}"/>
            </f:entry>
        </f:section>
        <f:entry title="">
            <div align="right">
                <f:validateButton title="${%title_validate}" progress="${%progress}"
                                  method="checkRegex" with="blockingJobs"/>
            </div>
        </f:entry>
    </f:optionalBlock>
</j:jelly>